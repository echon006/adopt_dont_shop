

<%= @flash_message %>
<fieldset>
<legend>Starting a new application</legend>
<br>
<%= form_with url: '/applications', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, :required => true %>
  <br>
  <%= form.label :street_address %>
  <%= form.text_field :street_address, :required => true %>
  <br>
  <%= form.label :city %>
  <%= form.text_field :city, :required => true %>
  <br>
  <%= form.label :state %>
  <%= form.text_field :state, :required => true %>
  <br>
  <%= form.label :zip_code %>
  <%= form.text_field :zip_code, :required => true %>
  <br>
  <br>
  <%= form.submit "Submit" %>
<% end %>
</fieldset>
